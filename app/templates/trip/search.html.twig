{% extends 'base.html.twig' %}

{% block title %}Eco Ride Recherche-covoiturage{% endblock %}

{% block body %}
    <main class="container mt-5 pt-5">
    <section class="p-4 rounded">
        <h3 class="text-center">Recherchez un covoiturage</h3>
        {{ form_start(form) }}
        <div class="row g-2 mt-3">
            <div class="col-12 col-md-9">
                <div class="row g-2">
                    <div class="col-12 col-sm-6 col-lg-3">
                        <label for="{{ form.departureCity.vars.id }}" class="form-label">
                            {{ form.departureCity.vars.label }}
                        </label>
                        {{ form_widget(form.departureCity, { attr: {'class': 'form-control'} }) }}
                        {{ form_errors(form.departureCity) }}
                    </div>
                    <div class="col-12 col-sm-6 col-lg-3">
                        <label for="{{ form.arrivalCity.vars.id }}" class="form-label">
                            {{ form.arrivalCity.vars.label }}
                        </label>
                        {{ form_widget(form.arrivalCity, { attr: {'class': 'form-control'} }) }}
                        {{ form_errors(form.arrivalCity) }}
                    </div>
                    <div class="col-12 col-sm-6 col-lg-3">
                        <label for="{{ form.date.vars.id }}" class="form-label">
                            {{ form.date.vars.label }}
                        </label>
                        {{ form_widget(form.date, { attr: {'class': 'form-control'} }) }}
                        {{ form_errors(form.date) }}
                    </div>
                    <div class="col-12 col-sm-6 col-lg-3 d-flex align-items-end">
                        {{ form_widget(form.search, { attr: {'class': 'btn btn-eco w-100'} }) }}
                    </div>
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </section>
        <!--filtres-->
        <section class="p-3 mt-4 rounded shadow-sm bg-eco-green text-eco-cream">
            <h5 class="mb-3">Filtres</h5>
            <form class="row g-2">
                <div class="col-12 col-sm-6 col-md-3">
                <label for="tri" class="form-label">Trier par</label>
                <select id="tri" class="form-select">
                    <option selected disabled>Choisir</option>
                    <option value="prix">Prix</option>
                    <option value="distance">Distance</option>
                    <option value="horaire">Horaire</option>
                </select>
                </div>
                <div class="col-12 col-sm-6 col-md-3">
                <label for="vehicule" class="form-label">Type de v√©hicule</label>
                <select id="vehicule" class="form-select">
                    <option selected disabled>Choisir</option>
                    <option value="electrique">√âlectrique</option>
                    <option value="hybride">Hybride</option>
                    <option value="essence">Thermique</option>
                </select>
                </div>
                <div class="col-12 col-sm-6 col-md-3">
                <label for="prix-max" class="form-label">Prix max </label>
                <input type="number" id="prix-max" class="form-control" placeholder="Ex : 20">
                </div>
                <div class="col-12 col-sm-6 col-md-3 align-self-end">
                <button type="submit" class="btn btn-eco w-100 mt-2">Appliquer</button>
                </div>
            </form>
        </section>
        <section class="mt-4">
            <div class="row g-3 justify-content-center">
                {% for trip in trips %}
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="card card-eco h-100">
                            <div class="row g-0 align-items-center">
                                <div class="col-4 d-flex flex-column align-items-center p-2">
                                    <img src="https://via.placeholder.com/80" alt="Photo du chauffeur" class="profile-img">
                                    <div class="fw-bold mt-1">{{ trip.driver.pseudo }}</div>
                                    <div class="rating mt-1">
                                        {% for i in 1..5 %}
                                            {% if i <= 4 %}
                                                <span class="leaf">&#127807;</span> {# remplace 4 par ta vraie note plus tard #}
                                            {% else %}
                                                <span class="leaf leaf-muted">&#127807;</span>
                                            {% endif %}
                                        {% endfor %}
                                    </div>
                                </div>
                                <div class="col-8">
                                    <div class="card-body p-2">
                                        <p class="mb-1"><strong>Trajet :</strong> {{ trip.departureCity }} ‚Üí {{ trip.arrivalCity }}</p>
                                        <p class="mb-1"><strong>Date :</strong> {{ trip.departureDatetime|date('d/m/Y H:i') }}</p>
                                        <p class="mb-1"><strong>Places :</strong> {{ trip.seatsAvailable }} restantes</p>
                                        <p class="mb-1"><strong>Prix :</strong> {{ trip.price }} cr√©dits</p>
                                        <p class="mb-1">
                                            <strong>√âcologique :</strong> 
                                            {% if trip.isEcological %}
                                                <span class="text-success fw-bold">Oui</span>
                                            {% else %}
                                                <span class="text-danger fw-bold">Non</span>
                                            {% endif %}
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer text-center">
                                <a href="{{ path('app_detail_covoiturage', {id: trip.id}) }}" class="btn btn-eco">üîç D√©tail</a>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <p class="text-center">Aucun covoiturage trouv√© pour l'instant.</p>
                {% endfor %}
            </div>
        </section>

{% endblock %}
