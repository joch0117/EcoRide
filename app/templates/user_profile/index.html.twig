{% extends 'base.html.twig' %}

{% block title %}modifier mon profil - EcoRide{% endblock %}

{% block body %}
<main class="pt-5 mt-5 flex-grow-1">
    <div class="container d-flex justify-content-center">
        <div class="bg-eco-green text-eco-cream p-4 rounded shadow" style="width: 100%; max-width: 500px;">

            <h1 class="text-center mb-4">Modifier mon profil</h1>
            {% if form.vars.submitted and not form.vars.valid %}
            <div class="alert alert-danger">
            Certaines informations sont manquantes ou invalides.
            </div>
            {% endif %}

            {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}

                <div class="mb-3">
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.username) }}
                    {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.surname) }}
                    {{ form_widget(form.surname, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.firstname) }}
                    {{ form_widget(form.firstname, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.phone, 'Numéro de téléphone') }}
                    {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.dateBirth, 'Date de naissance') }}
                    {{ form_widget(form.dateBirth, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.photo_url, 'Photo de profil') }}
                    {{ form_widget(form.photo_url, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="mb-3 form-check">
                    {{ form_widget(form.is_driver, {'attr': {'class': 'form-check-input'}}) }}
                    {{ form_label(form.is_driver, 'Je souhaite devenir chauffeur', {'label_attr': {'class': 'form-check-label'}}) }}
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-eco btn-lg rounded-pill px-5">
                        Enregistrer
                    </button>
                </div>

            {{ form_end(form) }}
        </div>
    </div>
</main>

{% endblock %}
