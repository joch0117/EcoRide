{% extends 'base.html.twig' %}

{% block title %}Connexion - EcoRide{% endblock %}

{% block body %}
<main class="container mt-5 pt-5">
    <div class="row justify-content-center">
        <div class="form-auth col-md-6">
            <h2 class="text-center">Se connecter</h2>

            {% if error %}
            <div class="alert alert-danger">
            Identifiants incorrects.
            </div>
            {% endif %}
            {{ form_start(form)}}
                <div class="mb-3">
                    {{ form_label(form.email, 'Adresse e-mail', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Entrez votre e-mail'}}) }}
                    {{ form_errors(form.email) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.password, 'Mot de passe', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.password, {'attr': {'class': 'form-control', 'placeholder': 'Entrez votre mot de passe'}}) }}
                    {{ form_errors(form.password) }}
                </div>

                <div class="mb-3 text-center">
                    <small><a href="{{ path('app_registration') }}">Cr√©er votre compte</a></small>
                </div>
                <button type="submit" class="btn btn-eco btn-success w-100">Se connecter</button>
            {{ form_end(Form) }}
        </div>
    </div>
</main>
{% endblock %}

